<html>

<head>
  <title>Release Info</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background: black;
      color: #ffe81f;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
    }

    .stars {
      position: absolute;
      width: 100%;
      height: 100%;
      background: url('https://www.transparenttextures.com/patterns/stardust.png');
      z-index: -1;
    }

    .container {
      text-align: center;
      width: 90%;
      /* Adjusted for better compatibility with mobile devices */
      max-width: 600px;
      transform: perspective(1000px) rotateX(45deg);
    }

    h1 {
      font-size: 2.5em;
      /* Adjusted font size for responsiveness */
      margin-bottom: 20px;
      text-transform: uppercase;
    }

    .info {
      font-size: 1em;
      /* Adjusted font size for responsiveness */
      margin-bottom: 20px;
    }

    .commit {
      font-size: 0.9em;
      /* Adjusted font size for responsiveness */
      margin: 10px 0;
    }
  </style>
</head>

<body>
  <div class="stars"></div>
  <div class="container">
    <h1>
      <%= currentVersion ? `${repo}` : 'Release Information' %>
    </h1>
    <div class="info">
      <p>Last Version: <%= currentVersion || 'N/A' %>
      </p>
      <p>Previous Version: <%= previousVersion || 'N/A' %>
      </p>
      <p>Change Type: <%= changeType || 'N/A' %>
      </p>
    </div>
    <h2>Last 5 Commits</h2>
    <% commits.forEach((commit)=> { %>
      <div class="commit">
        <%= commit.commit.message %>
      </div>
      <% }) %>
  </div>
</body>

</html>