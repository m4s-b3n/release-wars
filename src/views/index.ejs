<html>

<head>
  <title>Release Info</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      padding: 0;
      font-family: 'Arial', sans-serif;
      background: black;
      color: #ffe81f;
      overflow: hidden;
    }

    .stars {
      position: absolute;
      width: 100%;
      height: 100%;
      background: url('https://www.transparenttextures.com/patterns/stardust.png');
      z-index: -1;
    }

    .container {
      width: min(95vw, 1400px);
      height: min(95vh, 900px);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      box-sizing: border-box;
      transform: perspective(1000px) rotateX(45deg);
      transform-origin: center center;
      /* Ensure rotation happens around the center */
      margin-top: -20vh;
      /* Adjust to move the box more into the center */
    }

    h1 {
      font-size: calc(4rem + 2vw);
      margin-bottom: 20px;
      text-transform: uppercase;
      white-space: nowrap;
    }

    h2 {
      font-size: calc(2rem + 1vw);
      margin-bottom: 20px;
      text-transform: uppercase;
      white-space: nowrap;
    }

    .info,
    .commit {
      font-size: calc(1rem + 0.5vw);
      margin-bottom: 10px;
      white-space: nowrap;
    }
  </style>
</head>

<body>
  <div class="stars"></div>
  <div class="container">
    <h1>
      <%= currentVersion ? `${repo}` : 'Release Information' %>
    </h1>
    <div class="info">
      <p>Last Version: <%= currentVersion || 'N/A' %>
      </p>
      <% if (previousVersion && previousVersion !=='N/A' ) { %>
        <p>Previous Version: <%= previousVersion %>
        </p>
        <% } else { %>
          <p>No previous version available</p>
          <% } %>
            <p>Change Type: <%= changeType || 'N/A' %>
            </p>
    </div>
    <h2>Last 5 Commits</h2>
    <% if (commits.length> 0) { %>
      <% commits.forEach((commit)=> { %>
        <div class="commit">
          <%= commit.commit.message %>
        </div>
        <% }) %>
          <% } else { %>
            <div class="commit">
              No commits available
            </div>
            <% } %>
  </div>
</body>

</html>